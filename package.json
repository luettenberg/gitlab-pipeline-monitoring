{
  "name": "gitlab-pipeline-monitor",
  "version": "1.0.0",
  "description": "Monitor your gitlab pipelines",
  "author": "Christian LÃ¼ttenberg <christian.luettenberg@remondis.de>",
  "main": "src/app.js",
  "scripts": {
    "build": "babel src -d dist --source-maps",
    "serve": "node dist/server.js",
    "start": "babel-node src/server.js",
    "start:dev": "nodemon src/server.js --exec babel-node",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --testTimeout=10000",
    "coverage": "jest --coverage --runInBand --verbose",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\""
  },
  "dependencies": {
    "@log4js-node/gelf": "^1.0.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.2",
    "log4js": "^5.3.0",
    "morgan": "^1.9.1",
    "prom-client": "^11.5.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-node": "^10.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "eslintConfig": {
    "plugins": [
      "node",
      "jest"
    ],
    "env": {
      "jest/globals": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  }
}
